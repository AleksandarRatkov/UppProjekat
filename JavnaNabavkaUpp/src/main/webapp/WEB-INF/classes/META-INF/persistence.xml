<persistence xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
version="2.0">
<persistence-unit name="javnaNabavka" transaction-type="RESOURCE_LOCAL">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
	<class>activiti.spring.javnaNabavka.enitity.JavnaNabavka</class>
	<class>activiti.spring.javnaNabavka.enitity.PozivKvalifikacija</class>
	<class>activiti.spring.javnaNabavka.enitity.Prijava</class>
	<class>activiti.spring.javnaNabavka.enitity.Ponudjac</class>
	<class>activiti.spring.javnaNabavka.enitity.Ponuda</class>
	<exclude-unlisted-classes>true</exclude-unlisted-classes>
	<properties>
		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
		<property name="hibernate.hbm2ddl.auto" value="create" />
		<property name="hibernate.connection.url" value="jdbc:mysql://localhost/proces_javne_nabavke" />
		<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
		<property name="hibernate.connection.username" value="root" />
		<property name="hibernate.connection.password" value="root" />
	</properties>
</persistence-unit>
</persistence>